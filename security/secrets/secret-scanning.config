# Secret Scanning Configuration
# Purpose: Configures gitleaks for secret detection
# Description: Scans git history for accidentally committed secrets

[gitleaks]
title = "Secret Scanner"

[[rules]]
id = "aws-access-token"
description = "AWS Access Token"
regex = '''(AKIA|AGPA|AIDA|AROA|AIPA|ANPA|ANVA|ASIA)[A-Z0-9]{16}'''
tags = ["key", "AWS"]

[[rules]]
id = "stripe-api-key"
description = "Stripe API Key"
regex = '''sk_live_[0-9a-zA-Z]{24}'''
tags = ["key", "Stripe"]

[allowlist]
paths = [".git/", "node_modules/", "*.test.ts"]
